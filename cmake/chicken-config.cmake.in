# - Chicken package config file

@PACKAGE_INIT@

set(CHICKEN_VERSION       "@CHICKEN_VERSION@")
set(CHICKEN_API_VERSION   "@CHICKEN_API_VERSION@")

set(CHICKEN_RUNTIME_DIR   "@PACKAGE_INSTALL_BINDIR@")
set(CHICKEN_EXTENSION_DIR "@PACKAGE_INSTALL_EGGDIR@")
set(CHICKEN_DATA_DIR      "@PACKAGE_INSTALL_DATADIR@")

set(CHICKEN_INCLUDE_DIR   "@PACKAGE_INSTALL_INCLUDEDIR@" CACHE PATH "")
mark_as_advanced(CHICKEN_INCLUDE_DIR)

include(${CMAKE_CURRENT_LIST_DIR}/chicken-targets.cmake)

set(CHICKEN_COMPILER    Chicken::compiler    CACHE FILEPATH "")
set(CHICKEN_INTERPRETER Chicken::interpreter CACHE FILEPATH "")
set(CHICKEN_LIBRARY     Chicken::runtime     CACHE FILEPATH "")
mark_as_advanced(CHICKEN_COMPILER CHICKEN_INTERPRETER CHICKEN_LIBRARY)

set(CHICKEN_DEFINITIONS   "@CHICKEN_DEFINITIONS@" CACHE STRING "")
set(CHICKEN_C_FLAGS       "@CHICKEN_C_FLAGS@"     CACHE STRING "")
mark_as_advanced(CHICKEN_DEFINITIONS CHICKEN_C_FLAGS)

set(CHICKEN_EXTRA_LIBRARIES "@CHICKEN_EXTRA_LIBRARIES@" CACHE STRING "")

set(CHICKEN_INCLUDE_DIRS     ${CHICKEN_INCLUDE_DIR})
set(CHICKEN_LIBRARIES        ${CHICKEN_LIBRARY} ${CHICKEN_EXTRA_LIBRARIES})
set(CHICKEN_STATIC_LIBRARIES ${CHICKEN_STATIC_LIBRARY} ${CHICKEN_EXTRA_LIBRARIES})

set(CHICKEN_RUN ${CMAKE_CURRENT_LIST_DIR}/ChickenRun.cmake)

include(${CMAKE_CURRENT_LIST_DIR}/ChickenUse.cmake)
